{{ 'beunique-slide.css' | asset_url | stylesheet_tag }}

<div
  class="swiper-container"
  data-slides-per-view="{{ section.settings.slides_per_view }}"
  data-slider-width="{{ section.settings.slider_width }}"
  data-autoplay="{{ section.settings.autoplay }}"
>
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <img
          src="{{ block.settings.image | img_url: block.settings.image_width, block.settings.image_height }}"
          alt="{{ block.settings.image.alt }}"
          width="{{ block.settings.image_width }}"
          loading="eager"
          height="{{ block.settings.image_height }}"
        >
        <h2>{{ block.settings.title }}</h2>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>

{% schema %}
{
  "name": "BEUNIQUE Slide",
  "settings": [
    {
      "type": "range",
      "id": "slides_per_view",
      "label": "Slides Per View",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slider_width",
      "label": "Slider Width (px)",
      "min": 100,
      "max": 2000,
      "step": 20,
      "default": 400,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image Width (px)",
          "min": 100,
          "max": 2000,
          "step": 20,
          "default": 600,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "image_height",
          "label": "Image Height (px)",
          "min": 100,
          "max": 2000,
          "step": 20,
          "default": 400,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "BEUNIQUE Slide",
      "category": "Slider",
      "settings": {
        "slides_per_view": 3,
        "slider_width": 400,
        "autoplay": true
      },
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "title": "Sample Title 1",
            "text": "Sample Text 1",
            "image_width": 600,
            "image_height": 400
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "Sample Title 2",
            "text": "Sample Text 2",
            "image_width": 600,
            "image_height": 400
          }
        }
      ]
    }
  ]
}
{% endschema %}
