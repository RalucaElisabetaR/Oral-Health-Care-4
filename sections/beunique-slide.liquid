<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">

<div class="glide">
  <div class="glide__track" data-glide-el="track">
    <ul class="glide__slides">
      {% for block in section.blocks %}
        <li class="glide__slide">
          <div class="custom-card">
            <img
              class="custom-card-img-top"
              src="{{ block.settings.image | img_url: block.settings.image_width, block.settings.image_height }}"
              alt="{{ block.settings.image.alt }}"
              width="{{ block.settings.image_width }}"
              loading="eager"
              height="{{ block.settings.image_height }}"
            >
            <div class="custom-card-body">
              <h2 class="custom-card-title">{{ block.settings.title }}</h2>
              <p class="custom-card-text">{{ block.settings.text }}</p>
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="glide__arrows" data-glide-el="controls">
    <button class="glide__arrow glide__arrow--left" data-glide-dir="<">prev</button>
    <button class="glide__arrow glide__arrow--right" data-glide-dir=">">next</button>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    new Glide('.glide', {
      type: 'carousel',
      startAt: 0,
      perView: {{ section.settings.slides_per_view }},
      hoverpause: true,
      animationDuration: 1000,
      animationTimingFunc: 'linear',
    }).mount();
  });
</script>

{% schema %}
{
  "name": "BEUNIQUE Slide",
  "settings": [
    {
      "type": "range",
      "id": "slides_per_view",
      "label": "Slides Per View",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slider_width",
      "label": "Slider Width (px)",
      "min": 100,
      "max": 2000,
      "step": 20,
      "default": 400,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay Speed (ms)",
