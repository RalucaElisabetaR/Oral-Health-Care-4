{{ 'beunique-slide.css' | asset_url | stylesheet_tag }}

<div
  class="swiper-container"
  data-slides-per-view="{{ section.settings.slides_per_view }}"
  data-slider-width="{{ section.settings.slider_width }}"
  data-autoplay="{{ section.settings.autoplay }}"
  data-autoplay-speed="{{ section.settings.autoplay_speed }}"
  data-show-navigation-buttons="{{ section.settings.show_navigation_buttons }}"
>
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <div class="custom-card">
          <img
            class="custom-card-img-top"
            src="{{ block.settings.image | img_url: block.settings.image_width, block.settings.image_height }}"
            alt="{{ block.settings.image.alt }}"
            width="{{ block.settings.image_width }}"
            loading="eager"
            height="{{ block.settings.image_height }}"
          >
          <div class="custom-card-body">
            <h2 class="custom-card-title">{{ block.settings.title }}</h2>
            <p class="custom-card-text">{{ block.settings.text }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  
  {%- if section.settings.auto_rotate -%}
    <div class="slideshow__controls slideshow__controls--top slider-buttons no-js-hidden{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        {% render 'icon-caret' %}
      </button>
      <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
        {%- if section.settings.slider_visual == 'counter' -%}
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total">{{ section.blocks.size }}</span>
        {%- else -%}
          <div class="slideshow__control-wrapper">
            {%- for block in section.blocks -%}
              <button
                class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                aria-controls="Slider-{{ section.id }}"
              >
                {%- if section.settings.slider_visual == 'numbers' -%}
                  {{ forloop.index -}}
                {%- else -%}
                  <span class="dot"></span>
                {%- endif -%}
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        {% render 'icon-caret' %}
      </button>

      {%- if section.settings.show_navigation_buttons -%}
        <button
          type="button"
          class="slideshow__autoplay slider-button no-js-hidden{% if section.settings.show_navigation_buttons == false %} slideshow__autoplay--paused{% endif %}"
          aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}"
        >
          {%- render 'icon-pause' -%}
          {%- render 'icon-play' -%}
        </button>
      {%- endif -%}
    </div>
    <noscript>
      <div class="slider-buttons">
        <div class="slider-counter">
          {%- for block in section.blocks -%}
            <a
              href="#Slide-{{ section.id }}-{{ forloop.index }}"
              class="slider-counter__link link"
              aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
            >
              {{ forloop.index }}
            </a>
          {%- endfor -%}
        </div>
      </div>
    </noscript>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "BEUNIQUE Slide",
  "settings": [
    {
      "type": "range",
      "id": "slides_per_view",
      "label": "Slides Per View",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slider_width",
      "label": "Slider Width (px)",
      "min": 100,
      "max": 2000,
      "step": 20,
      "default": 400,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "Autoplay Speed (ms)",
      "min": 1000,
      "max": 9000,
      "step": 100,
      "default": 1000
    },
    {
      "type": "checkbox",
      "id": "show_navigation_buttons",
      "label": "Show Navigation Buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image Width (px)",
          "min": 100,
          "max": 2000,
          "step": 20,
          "default": 600,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "image_height",
          "label": "Image Height (px)",
          "min": 100,
          "max": 2000,
          "step": 20,
          "default": 400,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "BEUNIQUE Slide",
      "category": "Slider",
      "settings": {
        "slides_per_view": 3,
        "slider_width": 400,
        "autoplay": true
      },
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "title": "Sample Title 1",
            "text": "Sample Text 1",
            "image_width": 600,
            "image_height": 400
          }
        },
        {
          "type": "slide",
          "settings": {
            "title": "Sample Title 2",
            "text": "Sample Text 2",
            "image_width": 600,
            "image_height": 400
          }
        }
      ]
    }
  ]
}
{% endschema %}
