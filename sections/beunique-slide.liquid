      "max": 9000,
      "step": 100,
      "default": 1000
    },
    {
      "type": "checkbox",
      "id": "show_navigation_buttons",
      "label": "Show Navigation Buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "label": "Image Width (px)",
          "min": 100,
          "max": 2000,
          "step": 20,
          "default": 600,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "image_height",
          "label": "Image Height (px)",
          "min": 100,
          "max": 2000,
          "step": 20,
          "default": 400,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "BEUNIQUE Slide",
